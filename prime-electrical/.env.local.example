# =============================================================================
# Prime Electrical — Environment Variables for Vercel Deployment
# Copy these keys into Vercel → Project Settings → Environment Variables
# Set for: Production, Preview, Development
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase — Central Staging Database (REQUIRED)
# Get from: https://supabase.com → project → Settings → API
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# -----------------------------------------------------------------------------
# Twilio — Missed Call Text-Back
# Get from: https://console.twilio.com
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+64xxxxxxxxx

# Production domain — used to validate Twilio webhook signatures
SITE_URL=https://theprimeelectrical.co.nz

# -----------------------------------------------------------------------------
# Make.com + AI Enrichment
# -----------------------------------------------------------------------------
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/xxxxxxxxxxxxxxxxxxxxxxxxxxxx
ENRICH_SECRET=generate-a-random-64-char-hex-secret

# -----------------------------------------------------------------------------
# Vapi.ai Voice AI
# Get from: https://dashboard.vapi.ai → Settings
# -----------------------------------------------------------------------------
VAPI_WEBHOOK_SECRET=generate-a-random-64-char-hex-secret
VAPI_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VAPI_ASSISTANT_PRIME=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VAPI_ASSISTANT_AKF=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VAPI_ASSISTANT_CLEANJET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VAPI_PHONE_NUMBER_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Aircall integration
AIRCALL_API_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AIRCALL_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AIRCALL_WEBHOOK_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AIRCALL_NUMBER_ID=1234567

# On-call electrician mobile (E.164 format, e.g. +6421xxxxxxx)
ON_CALL_PHONE_NUMBER=+6421xxxxxxx

# -----------------------------------------------------------------------------
# Telnyx — NZ Phone Numbers & SIP
# Get from: https://portal.telnyx.com
# -----------------------------------------------------------------------------
TELNYX_API_KEY=KEYxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TELNYX_SIP_CONNECTION_ID=xxxxxxxxxxxxxxxxxxxx
TELNYX_SIP_USERNAME=primegroupvapi
TELNYX_SIP_PASSWORD=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TELNYX_SIP_DOMAIN=sip.telnyx.com
TELNYX_MESSAGING_PROFILE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
TELNYX_FROM_NUMBER_PRIME=+64xxxxxxxxx
TELNYX_FROM_NUMBER_AKF=+64xxxxxxxxx
TELNYX_FROM_NUMBER_CLEANJET=+64xxxxxxxxx

# -----------------------------------------------------------------------------
# Job Management Software Sync (PHASE5-001)
# Set JOB_SYNC_TARGET to "simpro" or "fergus" when ready
# -----------------------------------------------------------------------------
JOB_SYNC_TARGET=disabled
JOB_SYNC_WEBHOOK_SECRET=generate-a-random-64-char-hex-secret
SIMPRO_URL=https://your-company.simprosuite.com
SIMPRO_API_KEY=
FERGUS_URL=https://app.fergus.com/api/v2
FERGUS_API_KEY=
